{
  "compilerOptions": {
    "baseUrl": ".",
    "paths":{
      "@ionic-native/*": [
        "../node_modules/@ionic-native/*"
      ],
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}